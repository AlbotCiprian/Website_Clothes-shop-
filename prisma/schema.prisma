generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String?
  priceCents  Int
  currency    String      @default("MDL")
  images      String[]
  sizes       String[]
  colors      String[]
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  testimonials Testimonial[]
  faqs         Faq[]
  ugcAssets    UGCAsset[]
}

model Order {
  id             String      @id @default(cuid())
  number         Int         @default(autoincrement())
  email          String
  phone          String
  customerName   String
  address        String?
  np_city        String?
  np_warehouse   String?
  np_city_ref    String?
  np_warehouse_ref String?
  np_deliveryType String  @default("Locker")
  totalCents     Int
  currency       String      @default("MDL")
  paymentStatus  String      @default("pending")
  paymentGateway String      @default("maib")
  paymentId      String?
  shipmentStatus String      @default("pending")
  shipmentTTN    String?
  items          OrderItem[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  productId  String
  name       String
  slug       String
  size       String?
  color      String?
  qty        Int
  priceCents Int
  Order      Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  Product    Product @relation(fields: [productId], references: [id])
}

model Event {
  id         String   @id @default(cuid())
  sessionId  String
  userId     String?
  type       String
  productId  String?
  product    Product? @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())

  @@index([sessionId])
  @@index([type, createdAt])
}

model Testimonial {
  id        String   @id @default(cuid())
  quote     String
  author    String
  role      String?
  rating    Int      @default(5)
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

model Faq {
  id        String   @id @default(cuid())
  question  String
  answer    String
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

model UGCAsset {
  id        String   @id @default(cuid())
  image     String
  author    String
  handle    String?
  featured  Boolean  @default(true)
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}
