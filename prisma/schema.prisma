generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String?
  priceCents  Int
  currency    String      @default("MDL")
  images      String[]
  sizes       String[]
  colors      String[]
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id             String      @id @default(cuid())
  number         Int         @default(autoincrement())
  email          String
  phone          String
  customerName   String
  address        String?
  np_city        String?
  np_warehouse   String?
  totalCents     Int
  currency       String      @default("MDL")
  paymentStatus  String      @default("pending")
  paymentGateway String      @default("maib")
  paymentId      String?
  shipmentStatus String      @default("pending")
  shipmentTTN    String?
  items          OrderItem[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  productId  String
  name       String
  slug       String
  size       String?
  color      String?
  qty        Int
  priceCents Int
  Order      Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  Product    Product @relation(fields: [productId], references: [id])
}
